[core]
  autocrlf = input
  editor = atom --wait
  excludesFile = ~/.gitignore_global
  quotepath = false
  safecrlf = true
[alias]
  br = branch
  ch = checkout
  co = commit
  dump = cat-file -p
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  st = status
  type = cat-file -t
[push]
  default = current
[gitflow "release.finish"]
	message = Release %tag%
[gitflow "hotfix.finish"]
	message = Hotfix %tag%
